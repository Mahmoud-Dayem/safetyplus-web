pipeline {
    agent any

    environment {
        REACT_ENV = credentials('react-env')
    }

    stages {
        stage('Checkout') {
            steps {
                echo "ğŸ“¦ Fetching source code..."
                git branch: 'auditreportstoreinfirestore', url: 'https://github.com/Mahmoud-Dayem/safetyplus-web.git'
            }
        }

        stage('Prepare .env') {
            steps {
                echo "âš™ï¸ Preparing .env file..."
                withCredentials([file(credentialsId: 'react-env', variable: 'ENV_FILE')]) {
                    sh '''
                        cp "$ENV_FILE" .env
                        echo ".env file ready."
                        head -n 5 .env || true
                    '''
                }
            }
        }

        stage('Build React App') {
            agent {
                docker {
                    image 'node:20'
                    args '-v /var/run/docker.sock:/var/run/docker.sock --user root'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    echo "ğŸ§¹ Cleaning workspace..."
                    rm -rf node_modules build package-lock.json
                    npm cache clean --force

                    echo "ğŸ“¦ Installing dependencies..."
                    npm install

                    echo "ğŸ—ï¸ Building React app..."
                    npm run build

                    echo "âœ… Build complete!"
                '''
            }
        }

        stage('Archive Build') {
            steps {
                echo "ğŸ“ Archiving build artifacts..."
                archiveArtifacts artifacts: 'build/**', fingerprint: true
            }
        }
        stage('Build Docker Image for Kubernetes') {
    steps {
        echo "ğŸ³ Building Docker image for Kubernetes..."
        sh '''
            docker build -t react-nginx .
        '''
    }
}

stage('Deploy to Kubernetes (kind)') {
    steps {
        echo "ğŸš€ Deploying image to kind Kubernetes..."
        sh '''
            # Load image into kind cluster
            CLUSTER_NAME=$(kind get clusters | head -n 1)
            echo "Using kind cluster: $CLUSTER_NAME"
            kind load docker-image react-nginx --name $CLUSTER_NAME
 

            # Apply the Kubernetes manifests
            kubectl apply -f k8s-deployment.yaml --validate=false

            echo "âœ… Deployment applied. Checking status..."
            kubectl get pods -l app=react-nginx
        '''
    }
}

 
    }

    post {
        always {
            echo 'âœ… Pipeline completed!'
        }
        success {
            echo 'ğŸ‰ Build & Deploy succeeded! Visit: http://localhost:3000'
        }
        failure {
            echo 'âŒ Build failed!'
        }
    }
}
